{% extends 'database.html.twig' %}
{% block title %}
{{ parent() }} - Hráči

{% endblock %}

{% block body %}
<style>
.row{margin-left:10%;}
.form-group{margin-left:10%;}
</style>


<div id="top" class="row">
    <div class="page-header">
        <h2>Zobrazení hráče <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ player.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Jméno</strong></p>
        <p>
            {{ player.jmeno }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Příjmení</strong></p>
        <p>
            {{ player.prijmeni }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Datum narození</strong></p>
        <p>
            {% if player.datNar %}{{ player.datNar|date('d.m.Y') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Země původu</strong></p>
        <p>
            {{ player.zemePuvodu }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Výška</strong></p>
        <p>
            {{ player.vyska }} cm
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Váha</strong></p>
        <p>
            {{ player.vaha }} kg
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Držení hole</strong></p>
        <p>
            {{ player.drzeniHole }}
        </p>

    </div>
	<div class="col-md-6">
        	<p><strong>Pozice</strong></p>
        	<p>
            {{ player.pozice }}
        </p>

    </div>

    <div class="col-md-6">
        <p><strong>Tým</strong></p>
        <p>
            {{ player.tym }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('hraci') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Zpět na výpis
    </a>
    <a class="btn btn-primary" href="{{ path('hraci_edit', { 'id':  player.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Upravit
    </a>
    <a class="btn btn-info" href="{{ path('hraci_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nový hráč
    </a>
    <form action="{{ path('hraci_delete', { 'id': player.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="SMAZAT" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Jste si jist?');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Smazat
        </button>
    </form>
</div>


{% endblock %}

