{% extends 'database.html.twig' %}

{% block title %}
{{ parent() }} - Tým
{% endblock %}

{% block body %}

<style>
.row{margin-left:10%;}
.form-group{margin-left:10%;}
</style>


<div id="top" class="row">
    <div class="page-header">
        <h2>Ukázka týmu <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>ID</strong></p>
        <p>
            {{ team.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Název</strong></p>
        <p>
            {{ team.nazev }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Liga</strong></p>
        <p>
            {{ team.liga }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Město</strong></p>
        <p>
            {{ team.mesto }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Stát</strong></p>
        <p>
            {{ team.stat }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('tymy') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Zpět na výpis
    </a>
    <a class="btn btn-primary" href="{{ path('tymy_edit', { 'id':  team.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Upravit
    </a>
    <a class="btn btn-info" href="{{ path('tymy_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nový
    </a>
    <form action="{{ path('tymy_delete', { 'id': team.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="SMAZAT" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Jste si jist');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Smazat
        </button>
    </form>
</div>


{% endblock %}

