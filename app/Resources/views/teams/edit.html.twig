{% extends 'database.html.twig' %}

{% block title %}
{{ parent() }} -  Upravit tým
{% endblock %}

{% block body %}
<style>
.row{margin-left:10%;}

</style>



<div id="top" class="row">
    <div class="page-header">
        <h2>Upravit tým <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
    </div>
</div>



<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

    {{ form_start(edit_form) }}

    {{ form_label(edit_form.nazev, 'Název:') }} 
    {{ form_widget(edit_form.nazev) }}<br>
    {{ form_label(edit_form.liga, 'Liga:') }}
    {{ form_widget(edit_form.liga) }}<br>
    {{ form_label(edit_form.mesto, 'Město:') }}
    {{ form_widget(edit_form.mesto) }}<br>
    {{ form_label(edit_form.stat, 'Stát:') }}
    {{ form_widget(edit_form.stat) }}<br>
    <p>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Uložit
        </button>
    </p>
    {{ form_end(edit_form) }}

    <hr/>

    
<div class="form-group">
    <a class="btn btn-default" href="{{ path('tymy') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Zpět na výpis
    </a>
    <a class="btn btn-info" href="{{ path('tymy_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nový
    </a>
    <form action="{{ path('tymy_delete', { 'id': team.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="SMAZAT" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Jste si jist');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Smazat
        </button>
    </form>
</div>

</div>


{% endblock %}

